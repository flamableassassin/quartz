{
	"compilerOptions": {
		"target": "es2017",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./bin",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "./lib/**/*", "index.d.ts"
  ]
}